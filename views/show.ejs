<% layout('layouts/boilerplate') %>
<div class="row">
    <div class="col-8 offset-2">

   

   
    <h3>Listing Details:</h3>
    </div>
    <div class="card col-6 offset-2">
        
            <img src="<%=listingdata.image%>" class="card-img-top show-img" alt="...">
            <div class="card-body">
              <p class="card-text"><strong>Title:</strong><%=listingdata.title%>></p>
              <p class="card-text"><strong>Description:</strong><%= listingdata.description %></p>
              <p class="card-text"><strong>Location:</strong><%=listingdata.location%>></p>
              <p class="card-text"><strong>Country:</strong><%= listingdata.country%>></p>
              <p class="card-text"><strong>Price:</strong>  &#8377; <%= listingdata.price.toLocaleString("en-IN") %></p>
              
          
          </div>
    </div>
    
    <div class="btns">

        
        <a class="btn btn-dark col-1 offset-2 " href="/listings/<%= listingdata._id %>/edit">Edit</a>
   

        <form method="POST" action="/listings/<%= listingdata._id %>?_method=DELETE">
            <button class="btn btn-dark  offset-2  " >Delete</button>
        </form>
    </div>

</div>
