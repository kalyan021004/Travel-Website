<% layout('layouts/boilerplate') %>
<div class="row">
    <div class="col-8">
        <h3>Create a New Listing</h3>
        <form class="needs-validation" action="/listings" method="POST" novalidate>
            <div class="mb-3">
                <label for="title">Title</label>
                <input type="text" id="title" name="listingfeild[title]" placeholder="Enter title" required class="form-control">
                <div class="invalid-feedback">
                    Please enter a title.
                </div>
            </div>

            <div class="mb-3">
                <label for="description">Description</label>
                <textarea id="description" name="listingfeild[description]" placeholder="Enter description" required class="form-control"></textarea>
                <div class="invalid-feedback">
                    Please enter a description.
                </div>
            </div>

            <div class="mb-3">
                <label for="image">Image URL</label>
                <input type="text" id="image" name="listingfeild[image]" placeholder="Enter image URL" class="form-control">
                <div class="invalid-feedback">
                    Please enter a valid image URL.
                </div>
            </div>

            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price">Price</label>
                    <input type="number" id="price" name="listingfeild[price]" placeholder="Enter price" required class="form-control">
                    <div class="invalid-feedback">
                        Please enter a price.
                    </div>
                </div>
                <div class="mb-3 col-md-8">
                    <label for="country">Country</label>
                    <input type="text" id="country" name="listingfeild[country]" placeholder="Enter country" required class="form-control">
                    <div class="invalid-feedback">
                        Please enter a country.
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label for="location">Location</label>
                <input type="text" id="location" name="listingfeild[location]" placeholder="Enter location" required class="form-control">
                <div class="invalid-feedback">
                    Please enter a location.
                </div>
            </div>

            <button class="btn btn-dark add-btn mt-3">Add</button>
        </form>
    </div>
</div>
