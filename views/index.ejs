<% layout('layouts/boilerplate') %>

<body>
    
    <h3>All Places</h3>
    <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1">
      <% for (let listing of allListings) { %>
        <a class="listing-link" href="/listings/<%=listing._id%>">

          
          <div class="card col" style="width: 20rem;">
            <img src="<%=listing.image %>" style="height: 20rem" class="card-img-top" alt="...">
            <div class="card-img-overlay"></div>
            <div class="card-body">
              <p class="card-text">
                <%= listing.title %> <br>
                
                &#8377; <%=  listing.price%>/night <br>
              </p>
            </div>
          </div>
        </a>
          <% } %>

    </div>


    

   
   
</body>
